@model Leaser
@if (Model == null)
{
    <h2>No information available.</h2>
    <a asp-action="Index">See All leasers</a>
}
else
{
    <div class="container" >
        <div class="row" >
            Name: @Model.Name
        </div>
        <div class="row" >
            Address: @Model.Address
        </div>
        <div class="row" >
            Contact : @Model.ContactNumber
        </div>
        <div class="row" >
            Asset Type : @Model.AssetInfo.Type.ToString()
        </div>
        <div class="row">
            Asset Location: @Model.AssetInfo.Location
        </div>
        <div class="row">
            Description: @Model.AssetInfo.Description
        </div>
    </div>
}