@model RenterLeaserTransactionCreateDto

<h2>Link Renter and Leaser</h2>

@if (Model.Leasers.Count() == 0 || Model.Renters.Count() == 0)
{
    <div>
        <h4>Data Missing for Linking Renter/Leaser.</h4>
    </div>
}
else
{
    <div class="container-fluid">
        <table class="table table-sm table-bordered table-striped" >
            <thead>
                <tr>
                    <th>Leaser</th>
                    <th>Renter</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <form action="CreateTransaction" method="post">
                    <tr>
                        <td>
                            <select name="leaserId">
                                @foreach (var leaser in Model.Leasers)
                                {
                                    <option value="@leaser.LeaserId">@leaser.Name (@leaser.Address)</option>
                                }
                            </select>
                        </td>

                        <td>
                            <select name="renterId">
                                @foreach (var renter in Model.Renters)
                                {
                                    <option value="@renter.RenterId">@renter.Name (@renter.Address)</option>
                                }
                            </select>
                        </td>
                        <td>
                            <button type="submit" class="btn btn-dark">Link</button>
                        </td>
                    </tr>
                </form>
            </tbody>
        </table>
    </div>
}